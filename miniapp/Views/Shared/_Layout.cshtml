<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-sticky-note"></i> @ViewBag.Title</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="app" asp-action="index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="todo" asp-action="index">ToDo</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="app" asp-action="angular">Angular</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="app" asp-action="contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-sm btn-outline-secondary" asp-controller="account" asp-action="logout">Log out</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link btn btn-sm btn-outline-secondary" asp-controller="account" asp-action="signup">Sign Up</a></li>
                        @*<li class="nav-item"><a class="nav-link btn btn-sm btn-outline-secondary" asp-controller="account" asp-action="facebooksignup">Facebook Sign Up</a></li>*@
                        <li class="nav-item"><a class="nav-link btn btn-sm btn-outline-secondary" asp-controller="account" asp-action="login">Log In</a></li>
                        @*<li class="nav-item"><a class="nav-link btn btn-sm btn-outline-secondary" asp-controller="account" asp-action="signin">Sign In</a></li>*@
                    }
                </ul>
            </div>
        </nav>
    </header>
    <section class="container-fluid py-2">
        @RenderBody()
    </section>
    <footer class="container-fluid fixed-bottom bg-light footer-copyright text-center py-1">
        <div class="text-center">Copyright @DateTime.Now.Year - NJCode</div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
